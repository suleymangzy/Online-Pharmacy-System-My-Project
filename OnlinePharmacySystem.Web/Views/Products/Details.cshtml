@model Products

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.ProductName</h2>

<div class="product-detail">
    <div>
        <img src="@Model.ProductImageURL" alt="@Model.ProductName" style="width:300px; height:auto;" />
    </div>
    <div>
        <p><strong>Brand:</strong> @(Model.ProductBrand?.BrandName ?? "N/A")</p>
        <p><strong>Category:</strong> @(Model.ProductCategory?.CategoryName ?? "N/A")</p>
        <p><strong>Pharmacy:</strong> @(Model.ProductPharmacies?.PharmacyName ?? "N/A")</p>
        <p><strong>Supplier:</strong> @(Model.ProductSupplier?.SupplierName ?? "N/A")</p>
        <p><strong>Price:</strong> @Model.ProductPrice.ToString("C")</p>
        <p><strong>Description:</strong> @(Model.ProductDescription ?? "No description available")</p>
        <p><strong>FAQs:</strong> @(Model.ProductFAQs != null ? Model.ProductFAQs.Question + ": " + Model.ProductFAQs.Answer : "No FAQs available")</p>
    </div>
</div>


<form asp-action="AddToBasket" asp-controller="Basket" method="post">
    <input type="hidden" name="productId" value="@Model.ProductID" />
    <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 80px; display: inline;" />
    <button type="submit" class="btn btn-success">Sepete Ekle</button>
</form>

<a href="@Url.Action("Index", "Products")" class="btn btn-primary">Back to Products</a>

