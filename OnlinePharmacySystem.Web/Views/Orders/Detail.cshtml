@model Orders

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<p>
    <strong>Order ID:</strong> @Model.OrderID
</p>
<p>
    <strong>Invoice Number:</strong> @Model.OrderInvoiceNo
</p>
<p>
    <strong>Created At:</strong> @Model.OrderCreatedAt.ToShortDateString()
</p>
<p>
    <strong>Pharmacy:</strong> @Model.OrderPharmacy?.PharmacyName
</p>
<p>
    <strong>Delivery:</strong> @Model.OrderDelivery?.DeliveryStatus
</p>
<p>
    <strong>Payment:</strong> @Model.OrderPayment?.PaymentType
</p>

<h2>Order Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.OrderDetailProduct?.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.OrderDetailProduct?.ProductPrice.ToString("C")</td>
                <td>@item.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
