<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] Online Pharmacy System</title>
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

    <header id="header" class="header sticky-top">
        <div class="topbar d-flex align-items-center">
            <div class="container d-flex justify-content-center justify-content-md-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-envelope d-flex align-items-center"><a href="mailto:support@onlinepharmacy.com">support@onlinepharmacy.com</a></i>
                    <i class="bi bi-phone d-flex align-items-center ms-4"><span>+1 1234 567 890</span></i>
                </div>
                <div class="social-links d-none d-md-flex align-items-center">
                    <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div><!-- End Top Bar -->

        <div class="branding d-flex align-items-center">
            <div class="container position-relative d-flex align-items-center justify-content-between">
                <a href="~/Home/Index" class="logo d-flex align-items-center me-auto">
                    <h1 class="sitename">Online Pharmacy</h1>
                </a>

                <<nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="~/Home/Index" class="active">Home</a></li>
                        <li><a href="~/Home/About">About</a></li>
                        <li><a href="~/Home/Contact">Contact</a></li>
                        <li><a href="~/Pharmacies/Index">Pharmacies</a></li> <!-- Yeni Eklenen Pharmacies Linki -->
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

                <a class="cta-btn d-none d-sm-block" href="~/Orders/Index">Order Now</a>
            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer">
        <div class="footer-content position-relative">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-info">
                            <h3>Online Pharmacy</h3>
                            <p>
                                1234 Street Name<br>
                                City, AA 99999<br><br>
                                <strong>Phone:</strong> +1 1234 567 890<br>
                                <strong>Email:</strong> support@onlinepharmacy.com<br>
                            </p>
                            <div class="social-links d-flex mt-3">
                                <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>
                                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div><!-- End Footer Info -->

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/Index">Home</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/About">About</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/Contact">Contact</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/PrivacyPolicy">Privacy Policy</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/TermsOfService">Terms of Service</a></li>
                        </ul>
                    </div><!-- End Footer Links -->

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4>Our Services</h4>
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Products/Index">Medicines</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Products/HealthProducts">Health Products</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Orders/Prescriptions">Prescriptions</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Orders/Delivery">Delivery</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="~/Home/CustomerSupport">Customer Support</a></li>
                        </ul>
                    </div><!-- End Footer Links -->

                </div>
            </div>
        </div>

        <div class="footer-legal text-center position-relative">
            <div class="container">
                <div class="copyright">
                    &copy; 2024 <strong><span>Online Pharmacy</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>
