@model Pharmacies

@{
    ViewData["Title"] = Model.PharmacyName + " - Products";
}

<h2>@Model.PharmacyName - Products</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Image</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.PharmacyProducts)
        {
            <tr>
                <td>
                    <img src="@product.ProductImageURL" alt="@product.ProductName" style="width:100px; height:auto;" />
                </td>
                <td>
                    <a href="@Url.Action("Details", "Products", new { id = product.ProductID })">
                        @product.ProductName
                    </a>
                </td>
                <td>@product.ProductBrand.BrandName</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
